<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shubham.hikers.MainActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/hiker" />


    <TextView
        android:text="Speed : 4.7 m/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/speed"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/accuracy"
        android:layout_centerHorizontal="true"
        android:paddingLeft="85dp" />

    <TextView
        android:text="Bearing : 086"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/bearing"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/speed"
        android:layout_alignStart="@+id/speed"
        android:paddingLeft="85dp" />


    <TextView
        android:text="Altitude : 15m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/altitude"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/bearing"
        android:layout_alignStart="@+id/speed"
        android:paddingLeft="85dp" />


    <TextView
        android:text="Latitude    : 32.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/lat"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:paddingLeft="40dp"
        android:layout_below="@+id/hiker"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Accuracy : 20.0 m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/accuracy"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/lng"
        android:layout_alignParentStart="true"
        android:paddingLeft="65dp" />

    <TextView
        android:text="Address :\n76 Fake Street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/address"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:gravity="center_horizontal"
        android:layout_below="@+id/altitude"
        android:layout_alignParentStart="true"
        android:paddingLeft="2dp" />

    <TextView
        android:text="Longitude : 32.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/lng"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:paddingLeft="40dp"
        android:layout_below="@+id/lat"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hiker's Watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/hiker"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:paddingLeft="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
